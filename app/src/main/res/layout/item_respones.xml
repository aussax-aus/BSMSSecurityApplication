<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:strokeWidth="1dp"
    app:strokeColor="@android:color/darker_gray"
    app:cardBackgroundColor="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/tvTypeDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alarm: Panic  Depart/Company: DOE"
            android:textStyle="bold"
            android:textColor="#1E88E5"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tvRoleName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Role: Principal  Name: John Saxby"
            android:textSize="14sp"
            android:textColor="#333333"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/tvContactLeave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact: 0400 000 000  Time Leaving: 10:45"
            android:textSize="13sp"
            android:textColor="#333333"
            android:paddingTop="2dp" />

        <TextView
            android:id="@+id/tvIncident"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Incident: Intruder alert at east gate."
            android:textSize="13sp"
            android:textColor="#333333"
            android:paddingTop="4dp" />

        <TextView
            android:id="@+id/tvAction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Action: Area cleared, alarm reset."
            android:textSize="13sp"
            android:textColor="#333333"
            android:paddingTop="2dp" />

        <!-- Date and Photo Count Row (closer to Action row) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="2dp"
            android:weightSum="1">

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="20/10/2025 09:45"
                android:textColor="#888888"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tvPhotoCount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Photos: 3"
                android:textColor="#1933b3"
                android:textSize="12sp"
                android:drawableStart="@android:drawable/ic_menu_camera"
                android:drawablePadding="4dp" />
        </LinearLayout>

        <!-- Button Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end"
            android:paddingTop="8dp"
            android:background="@android:color/white">

            <Button
                android:id="@+id/btnCopy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Copy"
                android:textSize="12sp"
                android:backgroundTint="#4CAF50"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnEdit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:textSize="12sp"
                android:backgroundTint="#2196F3"
                android:textColor="@android:color/white"
                android:layout_marginEnd="6dp"/>

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:textSize="12sp"
                android:backgroundTint="#F44336"
                android:textColor="@android:color/white" />
        </LinearLayout>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
